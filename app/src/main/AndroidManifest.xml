<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iaso.iaso">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iaso_square_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iaso_circular_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserAccountHome"
            android:label="@string/title_activity_user_account_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddPrescriptionActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".AccountSettingsActivity" />
        <activity android:name=".MedicineDetailActivity" />
        <activity android:name=".EditMedicineActivity" />
        <activity android:name=".NotificationSettingsActivity"></activity>
    </application>

</manifest>